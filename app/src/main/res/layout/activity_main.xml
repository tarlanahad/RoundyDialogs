<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.tarlanahad.roundydialogs.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <com.tarlanahad.roundydialog.Widgets.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:text="Roundy Dialog"
            android:textColor="@color/black"
            app:typeface="Lato-Light.ttf"
            />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00B7A7"
            android:padding="40dp"
            android:src="@drawable/error_icon"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F7B32E"
            android:padding="40dp"
            android:src="@drawable/list_icon"
            android:textSize="40sp"

            />

        <ImageView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FE4757"
            android:padding="40dp"
            android:textSize="40sp"
            android:src="@drawable/progress_icon"
            android:tint="@color/white" />

    </LinearLayout>


</RelativeLayout>
